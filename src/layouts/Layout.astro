---
import Sidebar from "../components/Sidebar.astro"
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Electrolize&family=Familjen+Grotesk:ital,wght@0,400..700;1,400..700&family=Press+Start+2P&display=swap');
    </style>
    <title>My Portfolio</title>
  </head>
  <body>
    <div class="layout">
      <Sidebar />
      <main class="main-content">
        <slot /> <!-- Page content goes here -->
      </main>
    </div>
  </body>
</html>

<style is:global>
  h1 {
  font-size: 2rem;
  margin-bottom: 1rem;
  font-family: "Familjen Grotesk", sans-serif;
}

h2 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  font-family: "Familjen Grotesk", sans-serif;
}

p {
  font-size: 1.2rem;
  margin-bottom: 1rem;
  font-family: palatino, serif;
}

a {
  font-family: "Familjen Grotesk", sans-serif;
}
</style>

<style >
.familjen-grotesk-paragraph {
  font-family: "Familjen Grotesk", sans-serif;
  font-optical-sizing: auto;
  font-weight: 500;
  font-style: normal;
}

.layout {
  display: flex;
  min-height: 100vh;
}

.sidebar {
  width: 250px;
  position: fixed;
  height: 100vh;
  padding: 1rem;
  background: #f8f8f8;
}

.main-content {
  margin-left: 250px;
  padding: 1rem;
}

</style>